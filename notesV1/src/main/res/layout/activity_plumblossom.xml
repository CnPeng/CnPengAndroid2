<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_r_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/xiangguan"/>
    <TextView
        android:id="@+id/tv_r_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_r_0"
        android:layout_toLeftOf="@id/tv_r_0"
        android:background="@drawable/xiangguan"/>
    <TextView
        android:id="@+id/tv_r_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_r_0"
        android:layout_above="@id/tv_r_0"
        android:background="@drawable/xiangguan"/>
    <TextView
        android:id="@+id/tv_r_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_r_0"
        android:layout_toRightOf="@id/tv_r_0"
        android:background="@drawable/xiangguan"/>
    <TextView
        android:id="@+id/tv_r_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_r_0"
        android:layout_below="@id/tv_r_0"
        android:background="@drawable/xiangguan"/>

</RelativeLayout>